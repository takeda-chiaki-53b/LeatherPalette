<div class="container pt-16">
  <div class="w-full p-4 md:px-0 md:py-2 md:w-1/2 mx-auto">
    <ul class="list-none">
      <li class="break-all">ブランド：<%= @product.user.name %></li>
      <li>商品名：<%= @product.product_name %></li>
    </ul>
  </div>
</div>

<div class="relative w-full md:w-1/2 mx-auto">
  <div class="overflow-hidden relative">
    <%= image_tag(@product.product_image.url, class: 'block w-full h-auto object-contain') %>
  </div>
</div>

<% if current_user && current_user.own?(@product) %>
  <div class="w-full mt-10 p-4 md:px-0 md:py-2 md:w-1/2 mx-auto flex justify-between items-center">
    <%= link_to "削除", brand_admin_product_path(@product), class: "btn w-1/3 text-darkbrown bg-gray1 hover:text-white hover:bg-gray2 border-none", id: "button-delete-#{@product.id}", data: { turbo_method: :delete, turbo_confirm: '削除しますか？' } %>
    <%= link_to "編集", edit_brand_admin_product_path(@product), class: "btn w-1/3 text-natural bg-mocha hover:text-darkbrown hover:bg-natural border-none", id: "button-edit-#{@product.id}" %>
  </div>
<% end %>