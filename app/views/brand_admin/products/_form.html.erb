<%= form_with model: @product, url: @product.new_record? ? brand_admin_products_path : brand_admin_product_path(@product), local: true do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.label :product_image, '画像を選択（1枚）', class: 'label w-5/6 md:w-1/2 mx-auto pt-4 font-medium' %>
  <!-- 新規商品登録の場合は選択必須、編集時は未選択可 -->
  <% if @product.new_record? %>
    <%= f.file_field :product_image, class: 'file-input file-input-bordered form-control w-5/6 md:w-1/2 mx-auto', required: true %>
  <% else %>
    <%= f.file_field :product_image, class: 'file-input file-input-bordered form-control w-5/6 md:w-1/2 mx-auto', required: false %>
  <% end %>

  <!-- サムネイル表示 -->
  <div class="thumbnail w-5/6 md:w-1/2 mx-auto py-3 text-sm">
    <% if f.object.product_image.present? %>
      <p>【編集前の画像】ファイル未選択の場合はこの画像が保持されます。</p>
      <div class="flex flex-wrap">
        <div class="thumbnail-image-wrapper m-1 w-24 h-24 overflow-hidden flex items-center justify-center border border-neutral-200">
          <%= image_tag f.object.product_image.url, alt: "サムネイル", class: "thumbnail-image max-w-full max-h-full object-cover" %>
        </div>
      </div>
    <% end %>
  </div>

  <%= f.label :product_name, class: "label w-5/6 md:w-1/2 mx-auto pt-8 font-medium" %>
  <%= f.text_field :product_name, placeholder: "商品名をご入力ください", class: "input input-bordered form-control w-5/6 md:w-1/2 mx-auto h-10", required: true %>

  <div class='mx-auto w-5/6 md:w-1/2'>
    <%= f.submit "登録", class: "btn mt-8 w-full mt-6 mb-5 mx-auto h-10 bg-[#E6CCB585] hover:bg-[#fdba74] text-yellow-900", id: "submit-button" %>
  </div>
<% end %>