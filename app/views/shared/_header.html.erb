<!-- 大きな画面用 -->
<div class="hidden lg:block">
  <div class="fixed top-0 start-0 bottom-0 z-[60] w-60 bg-neutral-100 border-e-2 border-neutral-100 pt-7 pb-10 overflow-y-auto lg:block lg:translate-x-0 lg:end-auto lg:bottom-0">
      <div class="px-6 flex flex-col">
        <%= link_to root_path, class: "btn btn-ghost flex items-center text-xl rounded-lg justify-start font-bold text-yellow-900 hover:bg-white" do %>
          <span>LeatherPalette</span>
        <% end %>
      </div>
      <nav class="p-6 flex flex-col flex-wrap text-yellow-900">
        <ul class="space-y-2.5 font-semibold">
          <li>
            <%= link_to posts_path, class: "btn btn-ghost flex items-center text-sm rounded-lg justify-start hover:bg-white" do %>
              <i class="bi bi-house text-xl"></i>
              <span>ホーム</span>
            <% end %>
          </li>
          <li>
            <%= link_to "#", class: "btn btn-ghost flex items-center text-sm rounded-lg justify-start hover:bg-white" do %>
              <i class="bi bi-search text-xl"></i>
              <span>検索</span>
            <% end %>
          </li>
          <li>
            <%= link_to "#", class: "btn btn-ghost flex items-center text-sm rounded-lg justify-start hover:bg-white" do %>
              <i class="bi bi-plus-square text-xl"></i>
              <span>作成</span>
            <% end %>
          </li>
          <li>
            <%= link_to "#", class: "btn btn-ghost flex items-center text-sm rounded-lg justify-start hover:bg-white" do %>
              <i class="bi bi-heart text-xl"></i>
              <span>お気に入り</span>
            <% end %>
          </li>
          <li>
            <%= link_to "#", class: "btn btn-ghost flex items-center text-sm rounded-lg justify-start hover:bg-white" do %>
              <i class="bi bi-person-circle text-xl"></i>
              <span>マイページ</span>
            <% end %>
          </li>
          <li class="fixed bottom-4">
            <%= link_to logout_path, class: "btn btn-ghost flex items-center text-sm rounded-lg justify-start hover:bg-white", data: { turbo_method: :delete, turbo_confirm: 'ログアウトしてもよろしいですか？' } do %>
              <i class="bi bi-box-arrow-left text-xl"></i>
              <span>ログアウト</span>
            <% end %>
          </li>
        </ul>
      </nav>
  </div>
</div>

