<!-- 大画面用 -->
<div class="hidden lg:block">
  <div class="fixed top-0 start-0 bottom-0 z-[60] w-60 bg-neutral-100 border-e-2 border-neutral-100 pt-7 pb-10 overflow-y-auto lg:block lg:translate-x-0 lg:end-auto lg:bottom-0">
      <div class="px-6 flex flex-col">
        <%= link_to root_path, class: "btn btn-ghost flex items-center text-xl rounded-lg justify-start font-bold text-yellow-900 hover:bg-white" do %>
          <span>LeatherPalette</span>
        <% end %>
      </div>
      <nav class="p-6 flex flex-col flex-wrap text-yellow-900">
        <ul class="font-semibold">
          <li>
            <%= link_to login_path, class: "btn btn-ghost flex items-center text-sm rounded-lg justify-start hover:bg-white" do %>
              <i class="bi bi-box-arrow-in-right text-xl"></i>
              <span class="ml-1"><%= t('.login') %></span>
            <% end %>
          </li>
          <li>
            <%= link_to new_user_path, class: "mb-4 btn btn-ghost flex items-center text-sm rounded-lg justify-start hover:bg-white" do %>
              <i class="bi bi-person-add text-xl"></i>
              <span class="ml-1"><%= t('.sign_up') %></span>
            <% end %>
          </li>
          <li class="border-t">
            <%= link_to posts_path, class: "mt-4 btn btn-ghost flex items-center text-sm rounded-lg justify-start hover:bg-white" do %>
              <i class="bi bi-house text-xl"></i>
              <span class="ml-1"><%= t('.index') %></span>
            <% end %>
          </li>
          <li>
            <%= link_to searches_path, class: "btn btn-ghost flex items-center text-sm rounded-lg justify-start hover:bg-white" do %>
              <i class="bi bi-search text-xl"></i>
              <span class="ml-1"><%= t('.search') %></span>
            <% end %>
          </li>
        </ul>
      </nav>
  </div>
</div>

<!-- 中画面用 -->
<div class="hidden md:block lg:hidden">
  <div class="fixed top-0 start-0 bottom-0 z-[60] w-20 bg-neutral-100 border-e-2 border-neutral-100 text-yellow-900">
    <div class="flex flex-col justify-center items-center gap-y-4 py-5">
      <div class="mt-5 mb-4 font-bold">
        <%= link_to root_path, class: "flex-none text-xl font-semibold" do  %>
          <i class="bi bi-image"></i>
        <% end %>
      </div>

      <div class="flex flex-col justify-center items-center">
        <div class="inline-block">
          <%= link_to login_path, class:"flex flex-col items-center py-1.5 px-2.5 text-sm rounded-lg hover:bg-white", data: { turbo: false } do %>
            <i class="bi bi-box-arrow-in-right text-lg"></i>
            <span class="text-[0.6rem] font-medium"><%= t('.login') %></span>
          <% end %>
        </div>
        <div class="inline-block">
          <%= link_to new_user_path, class:"mb-4 flex flex-col items-center py-1.5 px-2.5 text-sm rounded-lg hover:bg-white", data: { turbo: false } do %>
            <i class="bi bi-person-add text-lg"></i>
            <span class="text-[0.6rem] font-medium"><%= t('.sign_up') %></span>
          <% end %>
        </div>

        <div class="inline-block  border-t">
          <%= link_to posts_path, class:"mt-4 flex flex-col items-center py-1.5 px-2.5 text-sm rounded-lg hover:bg-white", data: { turbo: false } do %>
            <i class="bi bi-house text-lg"></i>
            <span class="text-[0.6rem] font-medium"><%= t('.index') %></span>
          <% end %>
        </div>
        <div class="inline-block">
          <%= link_to searches_path, class:"flex flex-col items-center py-1.5 px-2.5 text-sm rounded-lg hover:bg-white", data: { turbo: false } do %>
            <i class="bi bi-search text-lg"></i>
            <span class="text-[0.6rem] font-medium"><%= t('.search') %></span>
          <% end %>
        </div>
      </div>
      
    </div>
  </div>
</div>


