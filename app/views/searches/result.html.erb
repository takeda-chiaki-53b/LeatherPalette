<% content_for(:title, t('.title')) %>
<div class="flex justify-center pt-20 mb-5">
  <h1 class="text-lg font-semibold" >検索結果</h1>
</div>

<!-- 検索条件の表示 -->
<div class="bg-neutral-100 rounded-xl border p-4 text-center text-xs md:text-sm w-5/6 md:w-1/2 mx-auto">
  <div>
    <p class="text-center border-b pb-1">検索条件</p>
    <ul class="text-left pt-2">
      <% if @selected_brand_name.present? %>
        <li class="flex">
          <span class="w-1/4">ブランド :</span>
          <strong class="w-3/4 break-all"><%= @selected_brand_name %></strong>
        </li>
      <% end %>
      <% if @selected_product_name.present? %>
        <li class="flex">
          <span class="w-1/4">商品名　 :</span>
          <strong class="w-3/4 break-all"><%= @selected_product_name %></strong>
        </li>
      <% end %>
      <% if @selected_used_year.present? %>
        <li class="flex">
          <span class="w-1/4">使用年数 :</span>
          <strong class="w-3/4"><%= @selected_used_year %></strong>
        </li>
      <% end %>
      <% if @selected_color.present? %>
        <li class="flex">
          <span class="w-1/4">カラー　 :</span>
          <strong class="w-3/4"><%= @selected_color %></strong>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<div class="flex flex-wrap m-4">
    <% if @posts.present? %>
      <div class="grid min-[320px]:grid-cols-2 min-[320px]:m-2 md:grid-cols-3 lg:grid-cols-4 gap-4 justify-center md:m-10">
        <%= render @posts %>
      </div>
    <% else %>
        <div class= 'text-base m-auto'>条件に一致する投稿はありません</div>
    <% end %>
</div>