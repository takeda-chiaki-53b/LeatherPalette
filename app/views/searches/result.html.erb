<% content_for(:title, t('.title')) %>
<div class="flex justify-center mt-5">
  <h1 class="text-2xl font-semibold text-yellow-900" >検索結果</h1>
</div>

<!-- 検索条件の表示 -->
<div class="bg-neutral-100 rounded-xl border p-4 text-center text-sm w-10/12 md:w-1/3 mx-auto text-yellow-900">
  <div>
    <p class="text-center border-b pb-1">検索条件</p>
    <ul class="text-left pt-2">
      <% if @selected_brand_name.present? %>
        <li class="flex">
          <span class="w-7/25 text-left">ブ ラ ン ド ：</span>
          <strong class="w-18/25 text-left"><%= @selected_brand_name %></strong>
        </li>
      <% end %>
      <% if @selected_used_year.present? %>
        <li class="flex">
          <span class="w-7/25 text-left">使用年数：</span>
          <strong class="w-18/25 text-left"><%= @selected_used_year %></strong>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<div class="flex flex-wrap m-4">
    <% if @posts.present? %>
      <div class="grid min-[320px]:grid-cols-2 min-[320px]:m-2 md:grid-cols-3 lg:grid-cols-4 gap-4 justify-center md:m-10">
        <%= render @posts %>
      </div>
    <% else %>
        <div class= 'text-lg m-auto'>投稿はありません</div>
    <% end %>
</div>