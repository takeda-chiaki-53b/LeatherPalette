<% content_for(:title, t('.title')) %>
<div class="flex justify-center mt-5 mb-5">
  <h1 class="text-2xl font-semibold text-yellow-900" >アカウント情報</h1>
</div>

<div class="bg-white rounded-xl shadow-md border border-neutral-200 p-6 text-center text-yellow-900 w-10/12 mx-auto">
  <div class="w-full md:w-1/2 mx-auto text-yellow-900 h-full">
    <div class="flex justify-center mb-4">
      <%= image_tag('no_image.png', class: 'rounded-full h-40 w-40 object-contain') %>
    </div>
    <div class="p-4">
      <div class="text-lg font-semibold mb-2">
        <%= current_user.name %>
      </div>
      <div class="text-lg font-semibold mb-2">
        <%= current_user.email %>
      </div>
    </div>
  </div>
  <div>
    <%= link_to "編集", edit_profile_path, class: "btn w-3/4 bg-[#E6CCB585] hover:bg-[#fdba74] text-yellow-900" %>
  </div>
</div>