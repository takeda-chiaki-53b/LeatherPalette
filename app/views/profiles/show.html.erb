<% content_for(:title, t('.title')) %>
<div class="flex justify-center mt-5 mb-5">
  <h1 class="text-2xl font-semibold text-yellow-900" >ユーザー情報</h1>
</div>

<div class="bg-white rounded-xl shadow-md border border-neutral-200 p-6 text-center text-yellow-900 w-10/12 mx-auto">

  <div class="w-full md:w-1/2 mx-auto text-yellow-900 h-full">
    <div class="flex justify-center mt-4 mb-4">
      <%= image_tag current_user.avatar_url, class: 'rounded-full h-40 w-40 border-2 object-contain' %>
    </div>

    <div class="py-4 px-1">
      <div class="md:text-lg font-semibold mb-3">
        <%= current_user.name %>
      </div>

      <div class="text-sm md:text-lg font-semibold mb-3 overflow-hidden text-ellipsis whitespace-nowrap">
        <%= current_user.email %>
      </div>
    </div>
  </div>

  <div>
    <%= link_to "編集", edit_profile_path, class: "btn w-full md:w-1/2 mb-5 bg-[#E6CCB585] hover:bg-[#fdba74] text-yellow-900" %>
  </div>
</div>